<templateSet group="plain">
  <template name="prfs" value="private final String " description="private final String" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="GROOVY_DECLARATION" value="true" />
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
  <template name="prf" value="private final " description="private final" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="GROOVY_DECLARATION" value="true" />
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
  <template name="prfi" value="private final int " description="private final int" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="GROOVY_DECLARATION" value="true" />
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
  <template name="logger" value="private final static Logger $VAR$ = LoggerFactory.getLogger($className$.class);" description="Static logger in a class (default name is LOG)" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="&quot;LOG&quot;" alwaysStopAt="true" />
    <variable name="className" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
</templateSet>
